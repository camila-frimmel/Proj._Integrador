<!-- res/layout/popup_layout.xml -->
<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gradiente_color"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Conteúdo do pop-up aqui -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="409dp"
        android:layout_height="283dp"
        android:backgroundTint="#98FF96"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="104dp"
            android:layout_height="105dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="23dp"
            android:layout_marginEnd="289dp"
            app:layout_constraintBottom_toTopOf="@+id/textTexto"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/frimmel_transparente" />

        <Button
            android:id="@+id/Fechar"
            android:layout_width="77dp"
            android:layout_height="60dp"
            android:layout_marginStart="331dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="223dp"
            android:backgroundTint="#00FFFFFF"
            android:fontFamily="@font/itim"
            android:text="X"
            android:textColor="#5A6B59"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textTelefone"
            android:layout_width="273dp"
            android:layout_height="60dp"
            android:layout_marginStart="67dp"
            android:layout_marginEnd="69dp"
            android:layout_marginBottom="44dp"
            android:background="@drawable/background_corner"
            android:fontFamily="@font/itim"
            android:paddingVertical="14dp"
            android:text="(55) 44 9 XXXX-XXXX"
            android:textAlignment="center"
            android:textColor="#1A8414"
            android:textSize="23sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textTexto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="37dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="12dp"
            android:fontFamily="@font/itim"
            android:text="Número de contato do provedor de internet"
            android:textColor="#5A6B59"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/textTelefone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
